# Copy this file to .env and fill in your values

# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
GUILD_ID=your_discord_server_id_here

# Documentation Path (path to local git repo clone)
DOCS_PATH=/path/to/your/repo/docs

# ============================================
# MODE SELECTION (choose one)
# ============================================

# Option 1: Local File Watcher (for local development)
# USE_WEBHOOK=false
# AUTO_START_WATCHER=true
# WATCH_RECURSIVE=true

# Option 2: GitHub Webhook (for VPS deployment)
USE_WEBHOOK=true
WEBHOOK_PORT=8080
WEBHOOK_SECRET=your_github_webhook_secret_here

# ============================================
# Common Settings
# ============================================

# Message Formatting
EMBED_COLOR=0x5865F2
MAX_MESSAGE_LENGTH=2000
MESSAGE_DELAY=0.5

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log
